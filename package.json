{
  "name": "tana-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Tana blockchain - Monorepo for all services",
  "workspaces": [
    "node",
    "ledger",
    "contracts",
    "cli",
    "website"
  ],
  "scripts": {
    "dev": "./dev.sh",
    "dev:mprocs": "mprocs",
    "dev:node": "cd node && bun run dev",
    "dev:ledger": "cd ledger && DATABASE_URL='postgres://tana:tana_dev_password@localhost:5432/tana' bun run dev",
    "dev:contracts": "cd contracts && bun run dev",
    "dev:cli": "cd cli && bun run dev",
    "dev:website": "cd website && npm run dev",
    "dev:runtime": "cd runtime && cargo run",
    "build": "bun run --filter '*' build",
    "build:runtime": "cd runtime && cargo build --release",
    "test": "bun run --filter '*' test",
    "test:runtime": "cd runtime && cargo test",
    "chaintest": "cp examples/runtime-test.ts runtime/example.ts && cd runtime && cargo run --release",
    "chaintest:dev": "cp examples/runtime-test.ts runtime/example.ts && cd runtime && cargo run",
    "chaintest:full": "cp examples/default.ts runtime/example.ts && cd runtime && cargo run",
    "contract": "bun scripts/run-contract.ts",
    "clean": "rm -rf node_modules */node_modules */dist runtime/target",
    "db:up": "docker compose up postgres redis -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f",
    "install:all": "bun install && cd runtime && cargo build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
